grafana.ini:
  auth.azuread:
    name: Azure AD
    enabled: true
    allow_sign_up: true
    client_id: {{ oauth_client_id }}
    client_secret: {{ oauth_grafana }}
    scopes: openid email profile
    auth_url: https://login.microsoftonline.com/{{ oauth_tenant_id }}/oauth2/v2.0/authorize
    token_url: https://login.microsoftonline.com/{{ oauth_tenant_id }}/oauth2/v2.0/token
    allowed_domains:
    allowed_groups:
